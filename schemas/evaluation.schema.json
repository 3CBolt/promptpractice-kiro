{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evaluation Schema v1.0",
  "description": "Schema for evaluation results in the Prompt Practice App",
  "type": "object",
  "required": ["attemptId", "status", "timestamp", "schemaVersion"],
  "properties": {
    "attemptId": {
      "type": "string",
      "description": "Reference to the attempt being evaluated"
    },
    "status": {
      "type": "string",
      "enum": ["queued", "running", "success", "partial", "error", "timeout"],
      "description": "Current status of the evaluation"
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["modelId"],
        "properties": {
          "modelId": {
            "type": "string",
            "description": "Identifier of the model that generated this result"
          },
          "response": {
            "type": "string",
            "description": "The model's response text"
          },
          "latency": {
            "type": "number",
            "minimum": 0,
            "description": "Response latency in milliseconds"
          },
          "tokenCount": {
            "type": "number",
            "minimum": 0,
            "description": "Number of tokens in the response"
          },
          "source": {
            "type": "string",
            "enum": ["hosted", "sample", "local"],
            "description": "Source of the model response"
          },
          "scores": {
            "type": "object",
            "properties": {
              "clarity": {
                "type": "number",
                "minimum": 0,
                "maximum": 5,
                "description": "Clarity score (0-5)"
              },
              "completeness": {
                "type": "number",
                "minimum": 0,
                "maximum": 5,
                "description": "Completeness score (0-5)"
              },
              "total": {
                "type": "number",
                "minimum": 0,
                "maximum": 10,
                "description": "Total score (clarity + completeness)"
              }
            },
            "description": "Evaluation scores for this result"
          },
          "feedback": {
            "type": "object",
            "properties": {
              "criterionId": {
                "type": "string",
                "description": "Identifier for the evaluation criterion"
              },
              "explanation": {
                "type": "string",
                "maxLength": 1000,
                "description": "Detailed explanation of the score"
              },
              "exampleFix": {
                "type": "string",
                "maxLength": 500,
                "description": "Specific example of how to improve"
              },
              "relatedGuide": {
                "type": "string",
                "description": "Guide slug for additional learning"
              }
            },
            "description": "Detailed feedback for improvement"
          }
        }
      },
      "description": "Array of results from different models"
    },
    "error": {
      "type": "object",
      "required": ["stage", "code", "message", "retryable", "timestamp"],
      "properties": {
        "stage": {
          "type": "string",
          "description": "Stage where the error occurred"
        },
        "code": {
          "type": "string",
          "description": "Error code for programmatic handling"
        },
        "message": {
          "type": "string",
          "description": "Human-readable error message"
        },
        "help": {
          "type": "string",
          "description": "Helpful guidance for resolving the error"
        },
        "retryable": {
          "type": "boolean",
          "description": "Whether the operation can be retried"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "When the error occurred"
        }
      },
      "description": "Structured error information when status is 'error'"
    },
    "rubricVersion": {
      "type": "string",
      "default": "1.0",
      "description": "Version of rubric used for evaluation"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of evaluation"
    },
    "schemaVersion": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version for compatibility tracking"
    }
  },
  "additionalProperties": false
}